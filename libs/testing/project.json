{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/testing/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/libs/testing",
        "tsConfig": "libs/testing/tsconfig.lib.json",
        "packageJson": "libs/testing/package.json",
        "buildableProjectDepsInPackageJsonType": "dependencies",
        "updateBuildableProjectDepsInPackageJson": true,
        "main": "libs/testing/src/index.ts",
        "assets": [
          "libs/testing/package.json"
        ]
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": false,
          "buildableProjectDepsInPackageJsonType": "dependencies",
          "updateBuildableProjectDepsInPackageJson": true,
          "fileReplacements": []
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "libs/testing/**/*.ts"
        ]
      },
      "outputs": [
        "{options.outputFile}"
      ]
    },
    "publish": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          {
            "command": "cat libs/testing/package.json | jq '.version = $version' --arg version $(cat package.json | jq '.version' | xargs) > libs/testing/package.json",
            "description": "Sync versions"
          },
          {
            "command": "npx figlet-cli -f Pagga Testing",
            "description": "Announce it"
          },
          {
            "command": "npx nx build testing --configuration=production",
            "description": "Create production optimized build"
          },
          {
            "command": "yarn publish --cwd dist/libs/testing --non-interactive",
            "description": "Publish it"
          }
        ]
      }
    }
  },
  "tags": [
    "nestjs"
  ]
}
