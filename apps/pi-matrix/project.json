{
  "name": "pi-matrix",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/pi-matrix/src",
  "projectType": "application",
  "targets": {
    "serve": {
      "executor": "@nrwl/node:node",
      "options": {
        "buildTarget": "pi-matrix:build",
        "inspect": "inspect",
        "port": 33503
      }
    },
    "build": {
      "executor": "@nrwl/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "options": {
        "assets": [],
        "outputPath": "dist/apps/pi-matrix",
        "generatePackageJson": true,
        "main": "apps/pi-matrix/src/entrypoints/main.ts",
        "tsConfig": "apps/pi-matrix/tsconfig.app.json",
        "fileReplacements": [],
        "target": "node",
        "compiler": "tsc"
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": false,
          "inspect": false,
          "fileReplacements": [],
          "assets": [
            {
              "glob": "**/*",
              "input": "fonts",
              "output": "./fonts"
            }
          ]
        }
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          {
            "command": "npx figlet-cli -f Pagga Pi Matrix",
            "description": "Announce it"
          },
          {
            "command": "npx nx build pi-matrix --configuration=production",
            "description": "Create production optimized build"
          },
          {
            "command": "npx terser dist/apps/pi-matrix/main.js -c -m --keep-classnames --module > dist/apps/pi-matrix/minified.js",
            "description": "Minify it"
          },
          {
            "command": "echo '#!/usr/bin/env node' > dist/apps/pi-matrix/main.js; cat dist/apps/pi-matrix/minified.js >> dist/apps/pi-matrix/main.js",
            "description": "Replace output (can't be done in previous step)"
          },
          {
            "command": "npx yarn publish --cwd dist/apps/pi-matrix --non-interactive",
            "description": "Publish it"
          }
        ]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": ["apps/pi-matrix/**/*.ts"]
      },
      "outputs": ["{options.outputFile}"]
    }
  },
  "tags": []
}
