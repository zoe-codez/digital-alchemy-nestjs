{
  "name": "pi-matrix",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/pi-matrix/src",
  "projectType": "application",
  "targets": {
    "serve": {
      "executor": "@nx/node:node",
      "options": {
        "buildTarget": "pi-matrix:build",
        "inspect": "inspect",
        "port": 33344
      }
    },
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "options": {
        "assets": [],
        "outputPath": "dist/apps/pi-matrix",
        "generatePackageJson": true,
        "main": "apps/pi-matrix/src/entrypoints/main.ts",
        "tsConfig": "apps/pi-matrix/tsconfig.app.json",
        "fileReplacements": [],
        "target": "node",
        "compiler": "tsc"
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": false,
          "inspect": false,
          "fileReplacements": [],
          "assets": [
            {
              "glob": "**/*",
              "input": "assets/fonts",
              "output": "./fonts"
            }
          ]
        }
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          {
            "command": "scripts/publish-app.sh pi-matrix",
            "description": "Canned script"
          }
        ]
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "options": {
        "lintFilePatterns": ["apps/pi-matrix/**/*.ts"]
      },
      "outputs": ["{options.outputFile}"]
    }
  },
  "tags": []
}
