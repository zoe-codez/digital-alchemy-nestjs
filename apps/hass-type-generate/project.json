{
  "name": "hass-type-generate",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/hass-type-generate/src",
  "projectType": "application",
  "targets": {
    "serve": {
      "executor": "@nrwl/node:node",
      "options": {
        "buildTarget": "hass-type-generate:build",
        "inspect": "inspect",
        "port": 33346
      }
    },
    "build": {
      "executor": "@nrwl/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "options": {
        "assets": [],
        "outputPath": "dist/apps/hass-type-generate",
        "generatePackageJson": true,
        "main": "apps/hass-type-generate/src/main.ts",
        "tsConfig": "apps/hass-type-generate/tsconfig.app.json",
        "target": "node",
        "compiler": "tsc"
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": false,
          "inspect": false
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": ["apps/hass-type-generate/**/*.ts"]
      },
      "outputs": ["{options.outputFile}"]
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          {
            "command": "npx figlet-cli -f Pagga HASS Type Generate",
            "description": "Announce it"
          },
          {
            "command": "npx nx build hass-type-generate --configuration=production",
            "description": "Create production optimized build"
          },
          {
            "command": "npx terser dist/apps/hass-type-generate/main.js -c -m --keep-classnames --module > dist/apps/hass-type-generate/minified.js",
            "description": "Minify it"
          },
          {
            "command": "echo '#!/usr/bin/env node' > dist/apps/hass-type-generate/main.js; cat dist/apps/hass-type-generate/minified.js >> dist/apps/hass-type-generate/main.js",
            "description": "Replace output (can't be done in previous step)"
          },
          {
            "command": "npx yarn publish --cwd dist/apps/hass-type-generate --non-interactive",
            "description": "Publish it"
          }
        ]
      }
    },
    "scan-config": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          {
            "command": "npx nx build hass-type-generate --configuration=production",
            "description": "Create standard production build"
          },
          {
            "command": "mkdir -p dist/configs; node dist/apps/hass-type-generate/main.js --scan-config > dist/configs/hass-type-generate.json",
            "description": "Scan config, output to dist"
          }
        ]
      }
    }
  },
  "tags": ["terminal"]
}
