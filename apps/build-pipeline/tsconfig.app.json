{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "../../dist/out-tsc",
    "types": [
      "node"
    ],
    "emitDecoratorMetadata": true,
    "target": "ESNext"
  },
  "exclude": [
    "**/*.spec.ts",
    "../../libs/boilerplate/**/*.spec.ts",
  ],
  "include": [
    "**/*.ts",
    "../../libs/render-utils/**/*.ts",
    "../../libs/boilerplate/**/*.ts",
    "../../libs/tty/**/*.ts",
    "../../libs/utilities/**/*.ts"
  ]
}
