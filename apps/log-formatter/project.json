{
  "name": "log-formatter",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/log-formatter/src",
  "projectType": "application",
  "targets": {
    "serve": {
      "executor": "@nx/node:node",
      "options": {
        "buildTarget": "log-formatter:build",
        "inspect": "inspect",
        "port": 33344
      }
    },
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "options": {
        "assets": [],
        "compiler": "tsc",
        "extractLicenses": false,
        "generatePackageJson": true,
        "main": "apps/log-formatter/src/main.ts",
        "outputPath": "dist/apps/log-formatter",
        "target": "node",
        "tsConfig": "apps/log-formatter/tsconfig.app.json"
      },
      "configurations": {
        "production": {
          "optimization": true,
          "inspect": false
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "options": {
        "lintFilePatterns": ["apps/log-formatter/**/*.ts"]
      },
      "outputs": ["{options.outputFile}"]
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          {
            "command": "scripts/publish-app.sh log-formatter",
            "description": "Canned script"
          }
        ]
      }
    },
    "compile": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          {
            "command": "scripts/compile.sh log-formatter",
            "description": "Canned script"
          }
        ]
      }
    }
  },
  "tags": ["tty", "utility"]
}
