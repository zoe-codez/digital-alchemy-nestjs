{
  "name": "hass-cli",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/hass-cli/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": [
        "{options.outputPath}"
      ],
      "defaultConfiguration": "production",
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/hass-cli",
        "main": "apps/hass-cli/src/entrypoints/main.ts",
        "tsConfig": "apps/hass-cli/tsconfig.app.json",
        "isolatedConfig": true,
        "webpackConfig": "apps/hass-cli/webpack.config.js"
      },
      "configurations": {
        "development": {
          "optimization": false,
          "generatePackageJson": false,
          "inspect": true
        },
        "production": {
          "optimization": true,
          "generatePackageJson": true,
          "inspect": false
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "hass-cli:build",
        "port": 33344
      },
      "configurations": {
        "development": {
          "buildTarget": "hass-cli:build:development"
        },
        "production": {
          "buildTarget": "hass-cli:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "apps/hass-cli/**/*.ts"
        ]
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          {
            "command": "scripts/publish-app.sh hass-cli",
            "description": "Canned script"
          }
        ]
      }
    },
    "compile": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          {
            "command": "scripts/compile.sh hass-cli",
            "description": "Canned script"
          }
        ]
      }
    }
  },
  "tags": ["tty"]
}
