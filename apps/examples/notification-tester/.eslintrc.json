{
  "extends": ["../../../.eslintrc.json"],
  "ignorePatterns": ["!**/*"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@typescript-eslint/no-magic-numbers": [
          "warn",
          // The numbers really are magic here
          { "ignoreArrayIndexes": true }
        ]
      },
      "parserOptions": {
        "project": ["apps/examples/notification-tester/tsconfig.app.json"]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    }
  ]
}
